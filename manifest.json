{

  "manifest_version": 2,
  "name": "qr-page",
  "description": "Displays the qr code of current page",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/qr-16.png",
      "32": "icons/qr-32.png"
    },
    "default_title" : "Scan QR Code",
    "default_popup": "public/index.html"
  },
  "permissions": ["tabs", "storage"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  }
}